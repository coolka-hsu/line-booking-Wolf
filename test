  <script>
    // 這裡換成你的 LIFF URL
    const liffUrl = "https://liff.line.me/2007778847-4d7bwNEV";

    // 自動跳轉
    window.onload = () => {
      setTimeout(() => {
        window.location.href = liffUrl;
      }, 800); // 延遲 0.8 秒讓畫面先渲染
    };

    // 提供手動按鈕
    document.getElementById("manualLink").href = liffUrl;
